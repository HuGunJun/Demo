<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="com.hgj.demo"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 网络权限 -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_SETTINGS"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <!-- 二维码扫描权限 -->
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.FLASHLIGHT"/>
    <uses-permission android:name="android.permission.VIBRATE"/>

    <uses-feature android:name="android.hardware.camera"/>
    <uses-feature android:name="android.hardware.camera.autofocus"/>

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".Application.MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        >
        <activity
            android:name=".Act.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity android:name=".Act.ImageTurn"></activity>

        <activity
            android:name=".Act.Act_SychronizeHorizontalView"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan">
        </activity>

        <activity android:name=".Act.LoaddingActivity"></activity>

        <activity android:name=".Act.ListAnimation"></activity>

        <activity android:name="com.zbar.lib.CaptureActivity"></activity>


        <!-- 下面是测试的Demo-->


        <activity
            android:name=".Demo.TestDemo"
            android:windowSoftInputMode="adjustPan">
        </activity>

        <activity
            android:name=".Demo.Activity1"></activity>
        <activity android:name=".Demo.Activity2"></activity>
        <activity android:name=".Demo.Activity3"></activity>
        <activity android:name=".Demo.ChatActivity"></activity>
        <activity android:name=".Demo.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>

        </activity>
        <!-- 上面是测试的Demo-->


        <!-- 设置环信应用的appkey -->
        <!-- 环信开始 -->
        <!-- 环信的百度地图页面 -->
        <activity
            android:name="com.easemob.easeui.ui.EaseBaiduMapActivity"
            android:screenOrientation="portrait"/>

        <!-- 环信显示大图片页面 -->
        <activity
            android:name="com.easemob.easeui.ui.EaseShowBigImageActivity"
            android:screenOrientation="portrait"/>

        <!-- 设置环信应用的appkey -->
        <meta-data
            android:name="EASEMOB_APPKEY"
            android:value="guojunkuaile#match"/>
        <!-- 声明sdk所需的service -->
        <service
            android:name="com.easemob.chat.EMChatService"
            android:exported="true"/>
        <!-- 声明sdk所需的receiver -->
        <receiver android:name="com.easemob.chat.EMMonitorReceiver">
            <intent-filter>
                <action android:name="android.intent.action.PACKAGE_REMOVED"/>

                <data android:scheme="package"/>
            </intent-filter>
            <!-- 可选filter -->
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
                <action android:name="android.intent.action.USER_PRESENT"/>
            </intent-filter>
        </receiver>
        <!-- 环信结束 -->


        <!-- 百度开始 -->
        <!-- 百度地图所需的service -->
        <service
            android:name="com.baidu.location.f"
            android:enabled="true"
            android:process=":remote"/>
        <!-- 此处使用的为百度应用所用户的定位key -->
        <meta-data
            android:name="com.baidu.lbsapi.API_KEY"
            android:value="3ecea51f560650b1ed8a4b99808f52e8"/>
        <!-- 百度结束 -->
        <!-- 声明sdk所需的service -->
    </application>

</manifest>
